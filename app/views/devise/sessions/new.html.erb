<div class="flex flex-col text-lg items-center bg-black font-mono font-light h-screen -mt-15 justify-center">

  <h2 class="text-3xl text-[#f6f6f6] pt-20">Welcome Back</h2>
  <p class="text-[#f6f6f6]/70 text-sm">Sign in to have access to your website!</p>

  <%= form_for(resource, html: { class:"space-y-4 bg-black-500 text-[#f6f6f6] p-15 pt-8 rounded-xl shadow-lg" }, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class:"shadow w-full border rounded focus:outline-none focus:shadow-outline p-2" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"shadow w-full border rounded focus:outline-none focus:shadow-outline p-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions text-center text-xl p-5">
      <%= f.submit "Log in", :class => "bg-[#3859a7] px-10 p-2 rounded-2xl hover:bg-[#3859a7]/70 text-[#f6f6f6]" %>
    </div>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>

  <% end %>

  
</div>